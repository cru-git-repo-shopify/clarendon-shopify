{% assign col_numbers = 0 %}
{% if section.settings.show_col_1 %}
    {% assign col_numbers = col_numbers |  plus: 1 %}
{% endif %}
{% if section.settings.show_col_2 %}
    {% assign col_numbers = col_numbers |  plus: 1 %}
{% endif %}
{% if section.settings.show_col_3 %}
    {% assign col_numbers = col_numbers |  plus: 1 %}
{% endif %}
{% if section.settings.show_col_4 %}
    {% assign col_numbers = col_numbers |  plus: 1 %}
{% endif %}
<div class="col-full columns_{{col_numbers}}" style='background-color: {{ section.settings.bg_color }}'>
    {% if section.settings.show_col_1 %}
        <div class="col-1 footer-column">
            {{ section.settings.col1_content }}
        </div>
    {% endif %}
    {% if section.settings.show_col_2 %}
        <div class="col-2 footer-column">
            {{ section.settings.col2_content }}
        </div>
    {% endif %}
    {% if section.settings.show_col_3 %}
        <div class="col-3 footer-column">
            {{ section.settings.col3_content }}
        </div>
    {% endif %}
    {% if section.settings.show_col_4 %}
        <div class="col-4 footer-column">
            {{ section.settings.col4_content }}
        </div>
    {% endif %}
</div>

{% if section.settings.enable_copyright %}
    <div class="copyright_section">
        {{ section.settings.copyright_content }}
    </div>
{% endif %}

{% schema %}
{
    "name":"CRU Footer",
    "class":"cru_footer",
    "tag": "div",
    "settings":[
        {
            "type":"color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#000000"
        },
        {
            "type": "checkbox",
            "id": "show_col_1",
            "label": "Show Column 1",
            "default": true
        },
         {
            "type": "textarea",
            "id": "col1_content",
            "label": "Column 1 Content"
        },
         {
            "type": "checkbox",
            "id": "show_col_2",
            "label": "Show Column 2",
            "default": false
        },
        {
            "type": "textarea",
            "id": "col2_content",
            "label": "Column 2 Content"
        },
         {
            "type": "checkbox",
            "id": "show_col_3",
            "label": "Show Column 3",
            "default": false
        },
        {
            "type": "textarea",
            "id": "col3_content",
            "label": "Column 3 Content"
        },
         {
            "type": "checkbox",
            "id": "show_col_4",
            "label": "Show Column 4",
            "default": false
        },
        {
            "type": "textarea",
            "id": "col4_content",
            "label": "Column 4 Content"
        },
         {
            "type": "checkbox",
            "id": "enable_copyright",
            "label": "Enable Copyright Section",
            "default": false
        },
        {
            "type": "textarea",
            "id": "copyright_content",
            "label": "Copyright Content"
        }
    ],
    "presets":[{"name": "CRU Footer"}]

}
{% endschema %} 